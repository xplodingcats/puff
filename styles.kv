#:kivy 2.2.0

<MainScreen>:
    FloatLayout:
        Gauge:
            id: gauge
            size_hint: None, None
            size: 400, 400
            pos_hint: {'center_x': 0.5, 'center_y': 0.6}
            
        Image:
            id: ai_sprite
            source: 'assets/sprites/idle.png'
            size_hint: 0.3, 0.3
            pos_hint: {'right': 0.95, 'y': 0.05}
            
        Button:
            text: 'â‰¡'
            size_hint: 0.1, 0.1
            pos_hint: {'x': 0.02, 'top': 0.98}
            on_press: app.root.toggle_menu()

<SideBar@BoxLayout>:
    orientation: 'vertical'
    size_hint_x: 0.3
    canvas.before:
        Color:
            rgba: 0.2, 0.2, 0.2, 1
        Rectangle:
            pos: self.pos
            size: self.size
            
    Button:
        text: 'Main'
        on_press: app.root.switch_to('main')
    Button:
        text: 'History'
        on_press: app.root.switch_to('history')
    Button:
        text: 'Settings'
        on_press: app.root.switch_to('settings')

<RootScreenManager>:
    transition: SlideTransition()
    MainScreen:
        name: 'main'
    HistoryScreen:
        name: 'history'
    SettingsScreen:
        name: 'settings'
