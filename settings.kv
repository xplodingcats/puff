<SettingsScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10
        
        Label:
            text: 'Settings'
            font_size: 30
            size_hint_y: 0.1
            
        TextInput:
            id: api_key
            hint_text: 'Enter OpenAI API Key'
            multiline: False
            size_hint_y: 0.1
            
        FileChooserIconView:
            id: sprite_chooser
            filters: ['*.png']
            size_hint_y: 0.5
            
        GridLayout:
            cols: 2
            size_hint_y: 0.2
            Button:
                text: 'Save Settings'
                on_press: app.save_settings()
            Button:
                text: 'Toggle Theme'
                on_press: app.toggle_theme()
        
        Button:
            text: 'Back to Main'
            size_hint_y: 0.1
            on_press: app.root.current = 'main'
